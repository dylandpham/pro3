@model IEnumerable<ShowroomManagement.Models.Setting>

<h2>Settings</h2>
<a asp-action="Create" class="btn btn-primary">Create New Setting</a>
<table class="table">
    <thead>
        <tr>
            <th>Key</th>
            <th>Value</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var setting in Model)
        {
            <tr>
                <td>@setting.Key</td>
                <td>@setting.Value</td>
                <td>
                    <!-- Edit button -->
                    <a asp-action="Edit" asp-route-id="@setting.Id" class="btn btn-warning">Edit</a>

                    <!-- Delete button -->
                    <form asp-action="Delete" asp-route-id="@setting.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this setting?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<button class="btn btn-secondary" onclick="window.history.back();">
    <i class="bi bi-arrow-left"></i> Go Back
</button>
