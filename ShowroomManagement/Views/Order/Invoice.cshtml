@model ShowroomManagement.Models.Order

<!DOCTYPE html>
<html>
<head>
    <title>Invoice - Order #@Model.Id</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <h1>Invoice</h1>
            <p>Order #@Model.Id</p>
        </div>

        <hr />

        <div>
            <h4>Customer Information</h4>
            <p><strong>Name:</strong> @Model.Customer?.Name</p>
            <p><strong>Email:</strong> @Model.Customer?.Email</p>
        </div>

        <hr />

        <div>
            <h4>Vehicle Details</h4>
            <p><strong>Name:</strong> @Model.Vehicle?.Name</p>
            <p><strong>Model No:</strong> @Model.Vehicle?.ModelNo</p>
            <p><strong>Price:</strong> @Model.Vehicle?.Price</p>
        </div>

        <hr />

        <div>
            <h4>Order Details</h4>
            <p><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</p>
            <p><strong>Total Price:</strong> @Model.TotalPrice</p>
        </div>

        <hr />

        <div class="text-center">
            <button class="btn btn-primary" onclick="window.print()">Print Invoice</button>
            <a class="btn btn-secondary" asp-action="Index">Back to Orders</a>
        </div>
    </div>
</body>
</html>
