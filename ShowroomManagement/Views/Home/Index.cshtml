@model IEnumerable<ShowroomManagement.Models.Vehicle>

@{
    ViewData["Title"] = "Welcome " + (User.Identity?.Name ?? "Guest");
}


<div class="container mt-4">
    <!-- Tiêu đề trang -->
    @* <h1>@ViewData["Title"]</h1> *@
    <hr />

    <!-- Liên kết tới các trang Order và Customer -->
    @* <div class="mb-4">
        <a href="@Url.Action("Index", "Order")" class="btn btn-primary btn-lg mr-2">Manage Orders</a>
        <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary btn-lg">Manage Customers</a>
        <a href="@Url.Action("Index", "Vehicle")" class="btn btn-success btn-lg">Manage Vehicles</a>
    </div> *@

    <!-- Bảng hiển thị danh sách Vehicles -->
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Image</th> <!-- Cột hiển thị ảnh -->
                <th>Model No</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <!-- Hiển thị ảnh -->
                    <td>
                        <img src="@(item.ImagePath ?? "/images/default-vehicle.png")" alt="Vehicle Image"
                            class="img-thumbnail" width="100" height="100"
                            onerror="this.src='/images/default-vehicle.png'" />
                    </td>
                    <td>@item.ModelNo</td>
                    <td>@item.Name</td>
                    <td>@item.Brand</td>
                    <td>@item.Price</td>
                    <td>@item.Status</td>
                    <td>
                        <!-- Các nút Edit và Details -->
                        <a href="@Url.Action("Edit", "Vehicle", new { id = item.Id })"
                            class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Details", "Vehicle", new { id = item.Id })"
                            class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <!-- Bootstrap JS và Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
}
