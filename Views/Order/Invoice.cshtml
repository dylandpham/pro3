@model ShowroomManagement.Models.Order

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice - Order #@Model.Id</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Khi in hóa đơn, ẩn tất cả các nút */
        print {
            .btn {
                display: none !important;
            }
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center">
            <h1>Invoice</h1>
            <p>Order #@Model.Id</p>
        </div>

        <hr />

        <div>
            <h4>Customer Information</h4>
            <p><strong>Name:</strong> @Model.Customer?.Name</p>
            <p><strong>Email:</strong> @Model.Customer?.Email</p>
        </div>

        <hr />

        <div>
            <h4>Vehicle Details</h4>
            <p><strong>Name:</strong> @Model.Vehicle?.Name</p>
            <p><strong>Model No:</strong> @Model.Vehicle?.ModelNo</p>
            <p><strong>Price:</strong> @Model.Vehicle?.Price</p>
        </div>

        <hr />

        <div>
            <h4>Order Details</h4>
            <p><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</p>
            <p><strong>Total Price:</strong> @Model.TotalPrice</p>
            <p><strong>Payment Method:</strong> @Model.PaymentMethod</p> <!-- Add payment method -->
        </div>

        <hr />

        <div class="text-center">
            <button class="btn btn-primary" onclick="window.print()">Print Invoice</button>
            <a class="btn btn-secondary" href="@Url.Action("Index", "Order")">Back to Orders</a>
        </div>
    </div>
</body>
</html>
