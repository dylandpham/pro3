@model ShowroomManagement.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1 class="text-center text-danger">@ViewData["Title"]</h1>

<h3 class="text-center">Are you sure you want to delete this order?</h3>

<div class="container mt-4">
    <h4>Order Details</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Vehicle</dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Vehicle != null ? Model.Vehicle.Name : "<span class='text-danger'>Vehicle not found</span>")
        </dd>
        
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Customer != null ? Model.Customer.Name : "<span class='text-danger'>Customer not found</span>")
        </dd>
        
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        
        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>

    <div class="d-flex justify-content-between">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash"></i> Delete Order
            </button>
        </form>
        
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
