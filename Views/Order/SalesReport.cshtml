@model IEnumerable<ShowroomManagement.Models.Order>

<h1>Sales Report</h1>

<!-- Nếu bạn muốn thông báo tổng giá trị của báo cáo -->
<div class="alert alert-info">
    <strong>Total Orders:</strong> @Model.Count() | <strong>Total Revenue:</strong> @Model.Sum(o => o.TotalPrice).ToString("C")
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Vehicle</th>
            <th>Order Date</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Customer?.Name</td>
                <td>@order.Vehicle?.Name</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalPrice.ToString("C")</td> <!-- Định dạng tiền tệ -->
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-secondary" onclick="window.history.back();">
    <i class="bi bi-arrow-left"></i> Go Back
</button>
