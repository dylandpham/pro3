@model ShowroomManagement.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-4">
    <!-- Vehicle Information Section -->
    <h4>Vehicle Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Vehicle Name</dt>
        <dd class="col-sm-10">
            @if (Model.Vehicle != null)
            {
                @Model.Vehicle.Name
            }
            else
            {
                <span class="text-danger">No vehicle assigned</span>
            }
        </dd>
        
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">
            @if (Model.Vehicle != null)
            {
                @Model.Vehicle.Brand
            }
            else
            {
                <span class="text-danger">No brand available</span>
            }
        </dd>
        
        <dt class="col-sm-2">Model Number</dt>
        <dd class="col-sm-10">
            @if (Model.Vehicle != null)
            {
                @Model.Vehicle.ModelNo
            }
            else
            {
                <span class="text-danger">No model number available</span>
            }
        </dd>
        
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">
            @if (Model.Vehicle != null)
            {
                @Model.Vehicle.Price
            }
            else
            {
                <span class="text-danger">No price available</span>
            }
        </dd>
    </dl>

    <!-- Order Information Section -->
    <h4>Order Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        
        <dt class="col-sm-2">Total Price</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>

    <!-- Actions Section -->
    <div class="d-flex justify-content-start mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg mr-2">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    <!-- Add Bootstrap icon support for Edit and Back to List buttons -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
