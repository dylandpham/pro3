@model IEnumerable<ShowroomManagement.Models.VehicleRegistration>

<h2 class="text-center mb-4">Vehicle Registrations</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Register a Vehicle</a>
</div>

<table class="table table-hover table-bordered">
    <thead class="table-light text-center">
        <tr> 
            <th scope="col">Vehicle</th>
            <th scope="col">Registration No.</th>
            <th scope="col">Reg. Date</th>
            <th scope="col">Expiry Date</th>
            <th scope="col">Owner</th>
            <th scope="col">Contact Info</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Vehicle?.Name</td>
                <td>@item.RegistrationNumber</td>
                <td>@item.RegistrationDate.ToString("dd/MM/yyyy")</td>
                <td>
                    @(item.RegistrationExpiryDate.HasValue 
                        ? item.RegistrationExpiryDate.Value.ToString("dd/MM/yyyy") 
                        : "<span class='text-muted'>N/A</span>")
                </td>
                <td>@item.OwnerName</td>
                <td>
                    <div>
                        <strong>Email:</strong> @item.Email
                    </div>
                    <div>
                        <strong>Phone:</strong> @item.PhoneNumber
                    </div>
                    <div>
                        <strong>Address:</strong> <span class="text-muted">@item.Address</span>
                    </div>
                </td>
                <td class="text-center">
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="View Details">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Edit Registration">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Delete Registration" onclick="return confirm('Are you sure you want to delete this registration?');">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Custom script for any additional functionality, if needed
    </script>
}
