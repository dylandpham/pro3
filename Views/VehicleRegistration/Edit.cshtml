@model ShowroomManagement.Models.VehicleRegistration

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Edit Vehicle Registration</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <!-- Vehicle Information -->
                <h5 class="text-primary">Vehicle Information</h5>
                <hr />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="VehicleId" class="form-label">Vehicle</label>
                        <select asp-for="VehicleId" class="form-select" asp-items="ViewBag.Vehicles">
                            <option value="" disabled selected>Select a vehicle</option>
                        </select>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Color" class="form-label">Color</label>
                        <input asp-for="Color" class="form-control" placeholder="Enter vehicle color" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Model" class="form-label">Model</label>
                        <input asp-for="Model" class="form-control" placeholder="Enter vehicle model" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Make" class="form-label">Make</label>
                        <input asp-for="Make" class="form-control" placeholder="Enter vehicle make" />
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>
                </div>

                <!-- Registration Information -->
                <h5 class="text-primary mt-4">Registration Information</h5>
                <hr />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="RegistrationNumber" class="form-label">Registration Number</label>
                        <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter registration number" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="OwnershipType" class="form-label">Ownership Type</label>
                        <input asp-for="OwnershipType" class="form-control" placeholder="Enter ownership type" />
                        <span asp-validation-for="OwnershipType" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="RegistrationDate" class="form-label">Registration Date</label>
                        <input asp-for="RegistrationDate" type="date" class="form-control" />
                        <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="RegistrationExpiryDate" class="form-label">Registration Expiry Date</label>
                        <input asp-for="RegistrationExpiryDate" type="date" class="form-control" />
                        <span asp-validation-for="RegistrationExpiryDate" class="text-danger"></span>
                    </div>
                </div> 

                <!-- Owner Information -->
                <h5 class="text-primary mt-4">Owner Information</h5>
                <hr />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="OwnerName" class="form-label">Owner Name</label>
                        <input asp-for="OwnerName" class="form-control" placeholder="Enter owner name" />
                        <span asp-validation-for="OwnerName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Address" class="form-label">Address</label>
                        <textarea asp-for="Address" class="form-control" placeholder="Enter address"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <!-- Submit and Cancel Buttons -->
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
