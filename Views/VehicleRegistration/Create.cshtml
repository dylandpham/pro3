@model ShowroomManagement.Models.VehicleRegistration

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Register a Vehicle</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label for="VehicleId" class="form-label">Vehicle</label>
                    <select asp-for="VehicleId" class="form-select" asp-items="ViewBag.Vehicles">
                        <option value="" disabled selected>Select a vehicle</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label asp-for="RegistrationNumber" class="form-label"></label>
                    <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter registration number" />
                    <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="RegistrationDate" class="form-label"></label>
                    <input asp-for="RegistrationDate" type="date" class="form-control" />
                    <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="OwnerName" class="form-label"></label>
                    <input asp-for="OwnerName" class="form-control" placeholder="Enter owner's name" />
                    <span asp-validation-for="OwnerName" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
