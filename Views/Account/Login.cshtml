@model LoginViewModel

@{
    Layout = "_Layout";  
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Login</h2>

    <form asp-action="Login" method="post" class="bg-light p-4 rounded shadow-sm">
        <div class="form-group mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group form-check mb-3">
            <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
            <label class="form-check-label" for="rememberMe">Remember me</label>
        </div>

        <button type="submit" class="btn btn-primary btn-block">Login</button>
    </form>

    <div class="mt-3 text-center">
        <a href="@Url.Action("Register", "Account")" class="text-decoration-none text-primary">Don't have an account? Register</a>
    </div>
</div>

