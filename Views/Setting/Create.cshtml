@model ShowroomManagement.Models.Setting

<div class="container mt-5">
    <!-- Tiêu đề -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Create New Setting</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Form tạo mới Setting -->
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <!-- Key -->
                <div class="mb-3">
                    <label asp-for="Key" class="form-label fw-bold">Key</label>
                    <input asp-for="Key" class="form-control" placeholder="Enter key name" />
                    <span asp-validation-for="Key" class="text-danger"></span>
                </div>

                <!-- Value -->
                <div class="mb-3">
                    <label asp-for="Value" class="form-label fw-bold">Value</label>
                    <input asp-for="Value" class="form-control" placeholder="Enter key value" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

