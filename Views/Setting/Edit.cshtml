@model ShowroomManagement.Models.Setting

<div class="container mt-5">
    <!-- Tiêu đề -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Edit Setting</h2>
        <button class="btn btn-secondary" onclick="window.history.back();">
            <i class="bi bi-arrow-left"></i> Go Back
        </button>
    </div>

    <!-- Form chỉnh sửa -->
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <!-- Key -->
                <div class="mb-3">
                    <label asp-for="Key" class="form-label fw-bold">Key</label>
                    <input asp-for="Key" class="form-control" placeholder="Enter setting key" />
                    <span asp-validation-for="Key" class="text-danger"></span>
                </div>

                <!-- Value -->
                <div class="mb-3">
                    <label asp-for="Value" class="form-label fw-bold">Value</label>
                    <input asp-for="Value" class="form-control" placeholder="Enter setting value" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <!-- Nút hành động -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="window.history.back();">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
