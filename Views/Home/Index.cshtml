@model IEnumerable<ShowroomManagement.Models.Vehicle>

@{
    ViewData["Title"] = "Welcome " + (User.Identity?.Name ?? "Guest");
    var currentPage = (int)(ViewData["CurrentPage"] ?? 1);
    var totalPages = (int)(ViewData["TotalPages"] ?? 1);
}
<style>
.custom-welcome {
    font-family: 'Dancing Script', cursive;
    font-size: 2.5rem; /* Kích thước chữ lớn hơn */
    font-weight: 700; /* Đậm hơn */
    color: #3f51b5; /* Màu chữ xanh nhạt */
    text-align: center; /* Căn giữa */
}
</style>
<div class="container mt-4">
    <!-- Tiêu đề trang -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="custom-welcome">@ViewData["Title"]</h1>
        <a href="@Url.Action("Create", "Vehicle")" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Vehicle
        </a>
    </div>

    <!-- Bảng hiển thị danh sách Vehicles -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Model No</th>
                    <th>Name</th>
                    <th>Brand</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr> 
                        <!-- Hiển thị ảnh -->
                        <td>
                            <img src="@(item.ImagePath ?? "/images/default-vehicle.png")" 
                                 alt="Vehicle Image" class="img-thumbnail" 
                                 style="max-width: 150px; max-height: 150px;" 
                                 onerror="this.src='/images/default-vehicle.png'" />
                        </td>
                        <td>@item.ModelNo</td>
                        <td>@item.Name</td>
                        <td>@item.Brand</td>
                        <td>@item.Price.ToString("C")</td> <!-- Hiển thị giá định dạng tiền tệ -->
                        <td>
                            @if (item.Status == "Available")
                            {
                                <span class="badge bg-success">@item.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@item.Status</span>
                            }
                        </td>
                        <td>
                            <!-- Các nút Edit và Details -->
                            <div class="d-flex justify-content-center gap-2">
                                <a href="@Url.Action("Edit", "Vehicle", new { id = item.Id })" 
                                   class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a href="@Url.Action("Details", "Vehicle", new { id = item.Id })" 
                                   class="btn btn-info btn-sm">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Phân trang -->
    <div class="d-flex justify-content-center mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <!-- Trang trước -->
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", "Home", new { page = currentPage - 1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link" aria-hidden="true">&laquo;</span>
                    </li>
                }
                <!-- Các số trang -->
                @for (var i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                       <a class="page-link" href="@Url.Action("Index", "Home", new { page = i })">@i</a>
                    </li>
                }
                <!-- Trang kế tiếp -->
                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", "Home", new { page = currentPage + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link" aria-hidden="true">&raquo;</span>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap JS và Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
}
