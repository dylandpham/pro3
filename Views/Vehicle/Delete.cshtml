@model ShowroomManagement.Models.Vehicle

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Delete Vehicle</h3>
                </div>
                <div class="card-body bg-light text-center">
                    <p class="text-danger fw-bold mb-3">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Are you sure you want to delete this vehicle?
                    </p>
                    <div class="mb-3">
                        <img src="@Model.ImagePath" alt="@Model.Name" class="img-thumbnail" 
                             onerror="this.src='/images/default-car.png'" 
                             style="max-height: 150px; margin-bottom: 15px;" />
                        <p class="fw-bold">@Model.Name</p>
                        <p class="text-muted">@Model.Brand</p>
                    </div>
                    <form asp-action="Delete" asp-controller="Vehicle" method="post" onsubmit="return confirm('This action cannot be undone. Do you want to proceed?');">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash-fill me-1"></i>Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn {
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: scale(1.05);
    }

    img {
        border-radius: 8px;
    }
</style>
