@model VehicleViewModel

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center display-4 mb-4">Create New Vehicle</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" required placeholder="Enter vehicle name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Brand" class="control-label"></label>
                        <input asp-for="Brand" class="form-control" required placeholder="Enter vehicle brand" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ModelNo" class="control-label"></label>
                        <input asp-for="ModelNo" class="form-control" required placeholder="Enter model number" />
                        <span asp-validation-for="ModelNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" required placeholder="Enter price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" required placeholder="Enter status" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Image" class="control-label">Vehicle Image</label>
                        <input type="file" asp-for="Image" class="form-control-file" accept="image/*" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary btn-lg mr-2">Save</button>
                <a href="@Url.Action("Index", "Vehicle")" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>
    </div>
</div>

